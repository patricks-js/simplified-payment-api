{
  "name": "simplified-payment-api",
  "version": "0.0.1",
  "description": "REST API to manage transactions between users, with statistics, validations and 3th-party services integration.",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "biome check --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "biome lint",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.10",
    "@nestjs/core": "^11.0.10",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-fastify": "^11.0.10",
    "@prisma/client": "^6.4.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nestjs/cli": "^11.0.4",
    "@nestjs/schematics": "^11.0.1",
    "@nestjs/testing": "^11.0.10",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.18",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^3.0.6",
    "globals": "^16.0.0",
    "prisma": "^6.4.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.6"
  },
  "license": "MIT",
  "author": {
    "name": "Lucas Patrick",
    "email": "tech.patrick.lsilva@gmail.com",
    "url": "https://github.com/patricks-js"
  },
  "engines": {
    "node": ">=22"
  }
}
